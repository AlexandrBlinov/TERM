@model YstIdentity.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Регистрация</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Создание новой учётной записи.</h4>
    <hr />
    @Html.ValidationSummary()
    <div style="margin-bottom:20px" class="controls controls-row">
        <div class="span2">
            Логин
        </div>
        <div class="span3">
            @Html.TextBoxFor(m => m.UserName)
        </div>
    </div>
    <div style="margin-bottom:20px" class="controls controls-row">
        <div class="span2">
            ФИО
        </div>
        <div class="span3">
            @Html.TextBoxFor(m => m.ContactFIO)
        </div>
    </div> 
    
     <div style="margin-bottom:20px" class="controls controls-row">
         <div class="span2">
             Телефон
         </div>
         <div class="span3">
             @Html.TextBoxFor(m => m.PhoneNumber)
         </div>
    </div> 
    
    <div style="margin-bottom:20px" class="controls controls-row">
          <div class="span2">
              Партнер
          </div>
          <div class="span3">
              @Html.CheckBoxFor(m => m.IsPartner)
          </div>
      </div>
    <div style="margin-bottom:20px" class="controls controls-row">
        <div class="span2">
            PartnerId
        </div>
        <div class="span3">
            @Html.TextBoxFor(m => m.PartnerId)
        </div>
    </div>
    
    <div style="margin-bottom:20px" class="controls controls-row">
          <div class="span2">
              Подразделение
          </div>
          <div class="span3">
              @Html.DropDownList("DepartmentID",(SelectList)ViewBag.Departments)
              
          </div>
      </div>
    
    <div style="margin-bottom:20px" class="controls controls-row">
        <div class="span2">
            Пароль
        </div>
        <div class="span3">
            @Html.PasswordFor(m => m.Password)
        </div>
    </div>
    <div style="margin-bottom:20px" class="controls controls-row">
        <div class="span2">
            Подтвердите пароль
        </div>
        <div class="span3">
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div style="margin-bottom:20px" class="controls controls-row">
            <input type="submit" class="btn btn-primary" value="Register" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}