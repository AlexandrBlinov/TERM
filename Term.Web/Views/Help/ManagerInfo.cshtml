@using Term.DAL.Resources
@model ManagerViewModel

@{
    var personalPhoto = Model.Manager.PersonalPhoto;
    ViewBag.Title = ResourceManagerInfo.YourManager;

}
<!-- @Model.Manager.GuidIn1S -->
<section class="manager-container">
    <h1 class="text-center"> @ResourceManagerInfo.YourManager</h1>    
   <div class="contact-container text-center">
        
        <div class="row m-b-20">
            <div class="col-md-4 col-md-offset-2">
                @if (personalPhoto != null)
                {
                <div class="user-avatar  m-b-20" style="background-image: url(@personalPhoto)"></div>
                }
                else
                {
                    <div class="user-avatar user-default-avatar m-b-20"></div>
                }
            </div>
                <div class="col-md-4">
                  
                        <div class="inline-block"> 
                            <dl class="dl-horizontal manager-data">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Manager.Fio)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Manager.Fio)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Manager.EMail)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Manager.EMail)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Manager.MobilePhoneNumber)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Manager.MobilePhoneNumber)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Manager.InternalPhoneNumber)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Manager.InternalPhoneNumber)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Manager.Skype)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Manager.Skype)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Manager.ICQ)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Manager.ICQ)
                                </dd>

                            </dl>
                        </div>
                    </div>
                  
            
        </div>
        
        
    </div>
        
</section>

@if (Model.Assistants.Any())
{
    <hr class="cart-divider"/>
<section class="assistants-container">
    <h3 class="text-center m-b-20"> @ResourceManagerInfo.ManagerAssistants</h3>
    <div class="contact-container text-center">

        @foreach (var a in Model.Assistants)
        {
            <div class="row m-b-20">
                <div class="col-md-4 col-md-offset-2">
                    @if (!String.IsNullOrEmpty(a.PersonalPhoto))
                    {
                        <div class="user-avatar h-250 m-b-20" style="background-image: url(@a.PersonalPhoto)"></div>
                    }
                    else
                    {
                        <div class="user-avatar h-250 user-default-avatar"></div>
                             }
                </div>
                <div class="col-md-4">

                    <div class="inline-block">
                        <dl class="dl-horizontal assistant-data">
                            <dt>
                                @Html.DisplayNameFor(model => a.Fio)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => a.Fio)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => a.EMail)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => a.EMail)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => a.MobilePhoneNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => a.MobilePhoneNumber)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => a.InternalPhoneNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => a.InternalPhoneNumber)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => a.Skype)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => a.Skype)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => a.ICQ)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => a.ICQ)
                            </dd>

                        </dl>
                    </div>
                </div>


            </div>
        }
    </div>

</section>
}
