<div class="modal fade in" id="popup-active-posts" role="dialog" aria-hidden="false" style="display: block;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title">{0}</h4>
            </div>
            <div class="modal-body">
                <p>{1}</p>
            </div>
            <div class="modal-footer">
                <form action="@Url.Action("donotification","seasonstock")" method="post" novalidate="novalidate">
                    <input type="hidden" name="postid"  value="{2}">
                    <input type="hidden" name="producerid" value="{3}">
                    <button type="submit" class="btn btn-danger" name="action" value="1">Принять</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Отложить</button>
                    <button type="submit" class="btn" name="action" value="2">Отменить</button>
                </form>
            </div>
        </div>

    </div>
</div>
