                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                                
                            </div>
                            @Html.HiddenFor(m => m.LogistikDepartment)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <hr class="cart-divider" />
                </div>
            </div>

            if (isAdmin)
            {
                <section class="row cart-properties js-cart js-wayofdelivery " style="@styleDeliveryConditions">
