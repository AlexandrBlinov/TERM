@section Scripts {
    <script>

        // Подключаем iCheck Для radiobutton
    /*    $(function () {
            $('[type=radio],[type=checkbox]').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue'
            });



        }())
            */

        function removeTr(el)
        {       
            $(el).closest('tr').remove();
        }

        var addToList = function (orderId, productId,productName,count) {

          //  console.log(orderId + ' ' + productId);    
            var tr = '<tr data-orderId="' + orderId + '" data-productId="' + productId + '"><td>' + productId + '</td><td>' + productName + '</td><td><input type="text" class="w-50" value="' + count + '"</td>' +

                '<td><a href="#" onclick="removeTr(this); return false;" class="yst-remove-item"><i class="glyphicon glyphicon-remove"></i></a></td> </tr>';
            //href = "#" onclick= "ko(this); return false;
            $('#slide-panel-table tbody').append((tr));
            
        }

        var removeFromList=function(orderId, productId)
        {
            $('#slide-panel-table tbody tr').each(function () {
                if ($(this).data('orderId') == orderId && $(this).data('productId') == productId)
                 
                    $(this).remove();
            });
        }

        $(function () {



            $('[type=checkbox]').change(function () {

                var $this = $(this);
                var ifchecked = this.checked;

                // если это весь заказ то чекаем и добавляем все товары заказа
                if ($this.hasClass('yst-order') && (this.id)) {
                    var id = this.id;

                    $('.checkbox-form-podbor.yst-order-item').each(function () {
                        if ($(this).data("yst-order") == id) {
                            $(this).prop("checked", ifchecked);

                            $this = $(this);
                            if (ifchecked) addToList($this.data('yst-order'), $this.data('yst-productid'), $this.data('yst-productname'), $this.data('yst-count'));
                            else removeFromList($this.data('yst-order'), $this.data('yst-productid'));
                        }
                    })
                } else
                    // если выбирают товар
                    if (ifchecked && $this.hasClass('yst-order-item'))
                        addToList($this.data('yst-order'), $this.data('yst-productid'), $this.data('yst-productname'), $this.data('yst-count'));
                        else removeFromList($this.data('yst-order'), $this.data('yst-productid'));
                   

            });

            $('#opener').on('click', function () {
                var panel = $('.slide-panel-container');
                var panelRight = $('.slide-panel-right');
                var $openerFa = $('#opener .fa');
                var duration = 500;

                if (panelRight.css('display') == 'none') {
                    panelRight.show(duration);                    
                    panel.animate({ 'right': '50%' }, duration);
                    panel.css({ 'transform': 'translate(50%)' ,'min-width':'550px'});

                }
                else {
                    panel.css({ 'min-width': '0' });
                    panel.animate({ 'right': '0' }, duration, function () { panel.css({ "transform": "" }); });
                    panelRight.hide(duration);
                    
                }
               
                $openerFa.toggleClass('fa-expand').toggleClass('fa-compress');
                return false;
            });

        }())
    </script>
}