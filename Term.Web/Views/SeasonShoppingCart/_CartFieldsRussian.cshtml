@model SeasonCartViewModel

<div class="row">
    @using (Html.BeginForm("createorder", "seasonshoppingcart", FormMethod.Post, new { @id = "seasoncart" }))
    {
        @Html.ValidationSummary()
            <div class="col-md-3">
                <div class="form-group">
                    <label for="DeliveryDate">Дата действия сезонного заказа (по):</label>
                    <div class="input-group date">
                        @Html.TextBoxFor(model => model.DeliveryDate, new { @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
            </div>
       
        <div class="col-md-5">
            <div class="form-group">
                <label for="Comments">Комментарии:</label>
                @Html.TextAreaFor(model => model.Comments, new { @class = "form-control noresize" })
                <!--<textarea name="Comments" class="form-control noresize" placeholder="" rows="3"></textarea>-->
            </div>
        </div>

        <div class="col-md-4">
            <section class="form-group bottom50">
                <div class="col-md-4 text-center">
                    <label>&nbsp;</label>
                    @Html.HiddenFor(model => model.ActiveWheelType)
                    <div class="form-group">
                        <input class="btn btn-primary btn-lg" type="submit" value="Создать сезонный заказ" name="CreateSeasonOrder" />
                    </div>
                </div>
            </section>
        </div>
    }
</div>