<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @*Styles.Render("~/Content/css")*@
    @*Scripts.Render("~/bundles/modernizr")*@
    @Styles.Render("~/Content/themes/base/css")
    @using Term.Web.Views.Resources;

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">-->
    <link href="~/Content/css/common.css" rel="stylesheet" />
    <link href="~/Content/css/toastr.css" rel="stylesheet" />
    <link href="~/Content/img/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>

    <div class="container height750">
        @RenderSection("featured", required: false)

        @RenderBody()

    </div>


    @{
        string lang = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
        string src = "https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places" + "&language=" + lang;
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src=@src></script>
    @Scripts.Render("~/bundles/other_service")
    @Scripts.Render("~/bundles/term_service")

    @RenderSection("scripts", required: false)

</body>
</html>
