<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    @*Styles.Render("~/Content/css")*@
    @*Scripts.Render("~/bundles/modernizr")*@
    @Styles.Render("~/Content/themes/base/css")
    @*Scripts.Render("~/bundles/jquery") *@

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/common.css" rel="stylesheet" />
    <link href="~/Content/css/toastr.css" rel="stylesheet" />

    <script src="~/Content/js/jquery-1.11.1.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
    <script src="~/Content/js/jquery.maskedinput.js"></script>
    <script src="~/Content/js/jquery.bootstrap-touchspin.js"></script>
    <script src="~/Content/js/toastr.js"></script>
    <script src="@Url.Content("~/Scripts/yst-scripts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/term-scripts.js")" type="text/javascript"></script>
    <script src="~/Content/js/common.js"></script>
    
    <link href="~/Content/img/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>

    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Terminal YST", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Шины", "Tyres", "Home")</li>
                        <li>@Html.ActionLink("Диски", "Disks", "Home")</li>
                        <li class="out"><a href="#">Аккумуляторы</a></li>
                        <li class="out"><a href="#">Аксессуары</a></li>
                        <li class="out"><a href="#">Подбор по авто</a></li>
                        <li class="dropdown other">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Прочее <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Аккумуляторы</a></li>
                                <li><a href="#">Аксессуары</a></li>
                                <li><a href="#">Подбор по авто</a></li>
                            </ul>
                        </li>
                    </ul>
                    @Html.Partial("_LoginMenu")
                </div>
            </div>
        </nav>
    </header>

    <div class="container top70">
        @RenderSection("featured", required: false)
        
            @RenderBody()
        
    </div>


    <footer>
        <div class="container">
            <div class="row text-center footer">&copy ЯРШИНТОРГ, 2014</div>
        </div>
    </footer>


    @*Scripts.Render("~/bundles/jquery") *@
    @*Scripts.Render("~/bundles/jqueryui") *@
    @RenderSection("scripts", required: false)
</body>
</html>
